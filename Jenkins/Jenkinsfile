pipeline{
    agent {
        docker { 
            image 'maven:3.9.7-eclipse-temurin-8-alpine' 
            args '-u root'
        }
    }

    
    stages {

        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh 'mvn -B clean package'
                }
            }
        }

        stage('Clean up') {
            steps {
                deleteDir()
            }
        }
    }   
}