pipeline{
    agent {
        docker { image 'maven:latest' }
    }

    
    stages {

        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Clean up') {
            steps {
                deleteDir()
            }
        }
    }   
}