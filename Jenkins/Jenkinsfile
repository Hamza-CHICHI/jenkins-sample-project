pipeline{
    agent {
        docker { 
            image 'maven:3.9.7-eclipse-temurin-17-alpine' 
            //args '-u root'
            args '-v $HOME/.m2:/home/jenkins/.m2:z -e MAVEN_CONFIG=/home/jenkins/.m2 -e MAVEN_OPTS="-Duser.home=/home/jenkins/.m2"'
            reuseNode true
        }
    }

    
    stages {

        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh 'mvn -B clean package -DskipTestss'
                }
            }
        }

        stage('Clean up') {
            steps {
                deleteDir()
            }
        }
    }   
}